

<%- include('../partials/header') -%>
<div class="container mt-5">
    <div class="row justify-content-center">
    <div class="col-md-4 border text-center p-4">
        <div>
        <span class="text-secondary">Start your personal experience</span>
        <h3>Sign-Up your Account</h2>
            
    </div>

    <% if (message) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/user/signUp" method="post">
        <div>
    
            <input class="form-input mb-3 rounded-pill pt-2 elongated-button" style="width:250" type="text" placeholder="First Name:" name="fname" >
            <input class="form-input mb-3 rounded-pill pt-2 elongated-button" style="width:250" type="text" placeholder="Last Name:" name="lname" >
            <input class="form-input mb-3 rounded-pill pt-2 elongated-button" style="width:250" type="email" placeholder="E-mail:" name="email" >
            <br>
            <input class="form-input mb-3 rounded-pill pt-2" style="width:250" type="password" placeholder="Password:" name="password">
            
            <input class="form-input mb-3 rounded-pill pt-2" style="width:250" type="password" placeholder="Confirm Password:" name="confirmPassword" id="Confirm-password">
            <br>
            <input type="checkbox" required><span class="text-body-secondary">Accept Terms and Conditions</span>
            <br><button type="submit" class="btn btn-dark rounded-pill elongated-button mb-2">Sign-Up</button>
            <br>
            <span>Already registered ? <a href="/user/login" style="text-decoration: underline">Sign-in</a></span>
            
        </div>
    </form>
</div>
</div>
</div>

<%- include('../partials/footer')-%>